<div class="article-page">
    <div class="header">
        <h1>
            Articles
        </h1>
        <%= link_to "Create", new_article_path, class: "btn btn-success create-button" %>

    </div>
    <div class="articles-container">
        <% @articles.each do |article| %>
        <div class="card text-center">
            <div class="card-header">
                by Cody
            </div>
            <div class="card-body">
                <h5 class="card-title text-success"><%= article.title %></h5>
                <p class="card-text"><%= article.description %></p>
                <div>
                    <%= link_to "View", article, class: "btn btn-outline-success" %>
                    <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info"  %>
                    <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?', disable_with: "Processing..." } %>
                </div>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
        <% end %>
    </div>
</div>